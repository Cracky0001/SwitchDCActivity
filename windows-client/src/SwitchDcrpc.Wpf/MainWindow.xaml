<Window x:Class="SwitchDcrpc.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SwitchDCActivity"
        Height="420"
        Width="760"
        MinWidth="680"
        MinHeight="380">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Settings" Click="MenuSettings_Click"/>
            <MenuItem Header="_About" Click="MenuAbout_Click"/>
        </Menu>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Switch Discord RPC"
                   FontSize="20"
                   FontWeight="SemiBold"
                    Margin="0,0,0,12"/>

        <GroupBox Grid.Row="1" Header="Connection" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Switch IP" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="0" Margin="0,4,10,10" Text="{Binding SwitchIp, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="0" Grid.Column="1" Text="Port" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Margin="0,4,10,10"
                         IsReadOnly="True"
                         ToolTip="Fixed: 6029"
                         Opacity="0.85"
                         Text="{Binding Port, Mode=OneWay}"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="RPC Name" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="2" Margin="0,4,10,10" Text="{Binding RpcName, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="0" Grid.Column="3" Text="Poll (ms)" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="3" Margin="0,4,0,10" Text="{Binding PollIntervalMs, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="TitleDB Pack" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="3" Grid.Column="0" Margin="0,4,10,0"
                          ItemsSource="{Binding TitleDbPacks}"
                          SelectedItem="{Binding SelectedTitleDbPack, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Row="3" Grid.Column="1"
                        Content="Update DB"
                        Width="100"
                        Height="28"
                        HorizontalAlignment="Left"
                        Margin="0,4,0,0"
                        Command="{Binding UpdateTitleDbCommand}"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
            <Button Content="Start" Width="100" Height="30" Margin="0,0,8,0" Command="{Binding StartCommand}"/>
            <Button Content="Stop" Width="100" Height="30" Command="{Binding StopCommand}"/>
        </StackPanel>

        <GroupBox Grid.Row="3" Header="Status" Padding="10" Margin="0,12,0,0">
            <StackPanel>
                <TextBlock Text="{Binding StatusText}" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding CurrentGameText}" Margin="0,6,0,0"/>
                <TextBlock Text="{Binding LastError}" Margin="0,6,0,0" Foreground="IndianRed"/>
            </StackPanel>
        </GroupBox>
        </Grid>
    </DockPanel>
</Window>
