<Window x:Class="SwitchDcrpc.Wpf.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="270"
        Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <CheckBox x:Name="StartWithWindowsCheckBox"
                      Content="Autostart with Windows"
                      Margin="0,0,0,10"/>
            <CheckBox x:Name="ConnectOnStartupCheckBox"
                      Content="Connect on startup"
                      Margin="0,0,0,10"/>
            <CheckBox x:Name="ShowGithubButtonCheckBox"
                      Content="Show GitHub button in RPC"
                      Margin="0,0,0,10"/>
            <CheckBox x:Name="ShowBatteryStatusCheckBox"
                      Content="Show battery/docked status in RPC"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Save"
                    Width="90"
                    Height="28"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Click="SaveButton_Click"/>
            <Button Content="Cancel"
                    Width="90"
                    Height="28"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
