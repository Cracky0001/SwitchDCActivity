<Window x:Class="SwitchDcrpc.Wpf.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        Height="250"
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="SwitchDCActivity" FontSize="20" FontWeight="SemiBold"/>
            <TextBlock Text="Discord Rich Presence client for Nintendo Switch state." Margin="0,6,0,0"/>
            <TextBlock x:Name="VersionTextBlock" Margin="0,10,0,0"/>
            <TextBlock Text="Author: Cracky" Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Open Repo"
                    Width="100"
                    Height="28"
                    Margin="0,0,8,0"
                    Click="OpenRepoButton_Click"/>
            <Button Content="OK"
                    Width="90"
                    Height="28"
                    IsDefault="True"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
